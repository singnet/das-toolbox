    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Gatekeeper API",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
             "cwd": "${workspaceFolder}/gatekeeper/api/src",
            "env": {
                "FLASK_APP": "main.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "autoStartBrowser": false
        },
        {
            "name": "Python Debugger: DAS Runner Manager API",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/das-runner-manager/src",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/das-runner-manager/src"
            },
            "args": [
                "api_server.main:app",
                "--reload",
                "--host", "0.0.0.0",
                "--port", "3000"
            ],
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/env/bin/python3"
        }
    ]
}